@model IEnumerable<ExpenseManagementSystem.Models.Transaction>

@{
    ViewData["Title"] = "Transactions";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Amount</th>
            <th>Category</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model)
        {
            <tr>
                <td>@transaction.Date</td>
                <td>@transaction.Amount</td>
                <td>@transaction.Category</td>
                <td>@transaction.Description</td>
                <td>
                    <a href="@Url.Action("Edit", "Transactions", new { id = transaction.Id })" class="btn btn-secondary">Edit</a>
                    <a href="@Url.Action("Delete", "Transactions", new { id = transaction.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Transactions")" class="btn btn-primary">Add New Transaction</a>
